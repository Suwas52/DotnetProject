    <div class="col-md-12">
        <input type="text" name="salary_paid" class="form-control" />
    </div>

    <label class="col-md-12">Paid_date</label>
    <br />
    <div class="col-md-12">
        <input type="datetime" name="paid_date" class="form-control" />
    </div>
    <br />

    <div class="col-md-12">
        <input type="submit" name="submit" class="btn btn-success" />
    </div>
